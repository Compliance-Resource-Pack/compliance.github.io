{
	"name": "website-new",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"pm2:restart": "pm2 restart website-svelte --time",
		"pm2:start": "pm2 start --name \"website-svelte\" \"PORT=1511 node build/\" --time",
		"pm2:build_and_start": "pnpm run build && pnpm run pm2:restart || pmpm run pm2:start"
	},
	"devDependencies": {
		"@fortawesome/free-brands-svg-icons": "^6.4.2",
		"@fortawesome/free-solid-svg-icons": "^6.4.2",
		"@melt-ui/pp": "^0.1.2",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.22.6",
		"@types/marked": "^5.0.1",
		"@types/node": "^20.5.0",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.32.4",
		"prettier": "^3.0.2",
		"prettier-plugin-svelte": "^3.0.3",
		"sass": "^1.65.1",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.0",
		"svelte-fa": "^3.0.4",
		"svelte-preprocess": "^5.0.4",
		"svelte-sequential-preprocessor": "^2.0.1",
		"typescript": "^5.1.6",
		"vite": "^4.4.9",
		"vite-plugin-lightningcss": "^0.0.5"
	},
	"type": "module",
	"dependencies": {
		"@melt-ui/svelte": "^0.35.0",
		"img-comparison-slider": "^8.0.0",
		"isomorphic-dompurify": "^1.8.0",
		"kramed-text-renderer": "^0.2.1",
		"luxon": "^3.4.0",
		"marked": "^7.0.3",
		"svelte-select": "^5.6.1",
		"sveltekit-i18n": "^2.4.2",
		"swiper": "^10.2.0",
		"tippy.js": "^6.3.7"
	}
}
