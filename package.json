		"@sveltejs/adapter-node": "^5.0.1",
		"@sveltejs/kit": "^2.5.10",
		"@types/marked": "^5.0.2",
		"@types/node": "^20.13.0",
		"eslint": "^9.4.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.39.0",
		"prettier": "^3.3.0",
		"prettier-plugin-svelte": "^3.2.3",
		"sass": "^1.77.4",
		"svelte": "^4.2.17",
		"svelte-check": "^3.8.0",
		"svelte-fa": "^4.0.2",
