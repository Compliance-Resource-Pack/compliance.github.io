		"img-comparison-slider": "^8.0.6",
		"isomorphic-dompurify": "^2.11.0",
		"kramed-text-renderer": "^0.2.1",
		"luxon": "^3.4.4",
		"marked": "^12.0.2",
		"svelte-select": "^5.8.3",
		"sveltekit-i18n": "^2.4.2",
		"swiper": "^11.1.4",
		"tippy.js": "^6.3.7"
	}
