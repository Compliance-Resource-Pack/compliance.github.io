{
	"name": "faithful-website-svelte",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"prettier": "prettier --write .",
		"pm2:restart": "pm2 restart website-svelte --time",
		"pm2:start": "pm2 start --name \"website-svelte\" \"PORT=1511 node build/\" --time",
		"pm2:build_and_start": "pnpm run build && pnpm run pm2:restart || pmpm run pm2:start"
	},
	"devDependencies": {
		"@fortawesome/free-brands-svg-icons": "^6.5.2",
		"@fortawesome/free-solid-svg-icons": "^6.5.2",
